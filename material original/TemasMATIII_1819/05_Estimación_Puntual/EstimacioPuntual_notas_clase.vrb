\frametitle{Ejemplo: Marca-recaptura}
\vspace*{-0.8cm}

$$
P(\mbox{$k$ marcados de $n$ capturados})=\dfrac{\binom{K}{k}\cdot \binom{N-K}{n-k}}{\binom{N}{n}}
$$

\begin{Schunk}
\begin{Sinput}
> N=15:100
> p=choose(15,4)*choose(N-15,6)/choose(N,10)
> plot(N,p,type="h",xaxp=c(15,100,17))
\end{Sinput}
\end{Schunk}
